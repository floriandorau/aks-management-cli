#!/usr/bin/env node
const termSize = require('term-size');

require('yargs/yargs')(process.argv.slice(2))
    .commandDir('../cmds')
    .demandCommand()
    .version()
    .completion()
    .options({
        'debug': {
            alias: 'd',
            describe: 'Debug mode',
        }
    })
    .wrap(termSize().columns)
    .help('help')
    .argv;